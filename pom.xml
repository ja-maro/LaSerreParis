	<repositories>
		<repository>
			<id>gitlab-maven</id>
			<url>${CI_API_V4_URL}/projects/${CI_PROJECT_ID}/packages/maven</url>
		</repository>
	</repositories>
	<distributionManagement>
		<repository>
			<id>gitlab-maven</id>
			<url>${CI_API_V4_URL}/projects/${CI_PROJECT_ID}/packages/maven</url>
		</repository>
		<snapshotRepository>
			<id>gitlab-maven</id>
			<url>${CI_API_V4_URL}/projects/${CI_PROJECT_ID}/packages/maven</url>
		</snapshotRepository>
	</distributionManagement>

	<modules>
		<module>LaSerreParis-EAR</module>
		<module>LaSerreParis-IDAO</module>
		<module>LaSerreParis-DAO</module>
		<module>LaSerreParis-IBusiness</module>
		<module>LaSerreParis-Business</module>
		<module>LaSerreParis-Web</module>
		<module>LaSerreParis-Entity</module>
	</modules>

</project>