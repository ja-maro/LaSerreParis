				<!-- <phase>verify</phase> -->
				<!-- <goals> -->
				<!-- <goal>site</goal> -->
				<!-- </goals> -->
				<!-- </execution> -->
				<!-- </executions> -->
				<!-- </plugin> -->

			</plugins>
		</pluginManagement>
	</build>

